<h1>Selected User Details</h1>

<%= render 'partials/users', user: @user %>

<div class="post">
  <h3>Bio</h3>
  <div class="post_show">
    <p><%= @user.bio %></p>
  </div>
</div>

<%@user.recent_posts.each do |post| %>
<a href="/users/<%= @user.id %>/posts/<%= post.id %>">
  <%= render 'partials/posts', post: post %>
  </a>
<%end%>
<button type="button"><%= link_to "Post", user_posts_path( user_id: @user.id) %></button>
<div class="btn">
  <%= link_to "See All Posts", user_posts_path(user_id: @user.id), class: 'button_center'%>
</div>
