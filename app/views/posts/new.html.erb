<h1>Add new Post</h1>

<%= form_with(model: [@user, @post], url: user_post_path(@user)) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>

