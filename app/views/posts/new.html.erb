<h1>Add new Post</h1>

<%= form_with model: [@post], url: user_posts_path(@user), method: :post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>

