<h1>Create Comment</h1>

<%= form_with model: [@user, @post, @comment], url: user_post_comments_path(@user, @post), method: :post do |form| %>
<div>
<p>
  <%= form.label :text %><br />
  <%= form.text_area :text, cols: 30, rows:1 %>
</p>
</div>
<div>
<p><%= form.submit "Submit", class: 'button_center' %></p>
</div>
<% end %>
